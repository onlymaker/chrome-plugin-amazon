{
  "name": "Amazon rating",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "logo_16.png",
    "48": "logo_48.png",
    "128": "logo_128.png"
  },
  "permissions": [
    "notifications","tabs","http://*/*","https://*/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": [
        "foreground.js"
      ]
    }
  ]
}